<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/classicmodels</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <!-- <property name="show_sql">true</property>  -->
  <property name="hibernate.current_session_context_class">thread</property>
  <mapping resource="com/ordersystem/domain/Customers.hbm.xml"/>
  <mapping resource="com/ordersystem/domain/Employees.hbm.xml"/>
  <mapping resource="com/ordersystem/domain/Offices.hbm.xml"/>
  <mapping resource="com/ordersystem/domain/Orderdetails.hbm.xml"/>
  <mapping resource="com/ordersystem/domain/Orders.hbm.xml"/>
  <mapping resource="com/ordersystem/domain/Payments.hbm.xml"/>
  <mapping resource="com/ordersystem/domain/Productlines.hbm.xml"/>
  <mapping resource="com/ordersystem/domain/Products.hbm.xml"/>

 </session-factory>
</hibernate-configuration>
